<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="RiECalmingPlan.Views.Page_Registration">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="Lbl_Username" Text="Username" />
            <Entry x:Name="Entry_UserName" Placeholder="Enter your email as your Username" />
            <Label x:Name="Lbl_Password" Text="Password" />
            <Entry x:Name="Entry_PassWord" Placeholder="Password" />
            
            <Label x:Name="Rego" Text="Registration details will be added here..." Padding="10" />

            <Button x:Name="SaveRegistration"
                    Text="Sign In" WidthRequest="110"
                    HeightRequest="20"  CornerRadius="3"
                    HorizontalOptions="Center"  BackgroundColor="Wheat"
                    TextColor="Black" Clicked="RegisterNewUser" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
