                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Stay with me but don't ask too many questions" />
                        <local:StepProgressBar StepColor="Red" Steps="3" />
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Stay with me but don't ask too many questions" />
                        <local:StepProgressBar StepColor="Red" Steps="3" />
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Stay with me but don't ask too many questions" />
                        <local:StepProgressBar StepColor="Red" Steps="3" />
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>