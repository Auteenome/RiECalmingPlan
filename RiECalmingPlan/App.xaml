<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" x:Class="RiECalmingPlan.App">
    <Application.Resources>
        <!-- Global Styles and Colors. Reference these using: ="{StaticResource *ResourceKey*}" --> 
        <ResourceDictionary>
            <Color x:Key="RiEDarkGreen">#006738</Color>
            <Color x:Key="RiELightGreen">#8DC63F</Color>
            <Color x:Key="RiEOrange">#F05A28</Color>
            <Color x:Key="RiEGray">#5B5C5C</Color>
            <Color x:Key="RiEOffWhite">#E8E5DA</Color>
            <Color x:Key="RiEOffBlack">#333333</Color>

            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" 
                        Value="{StaticResource RiEOffWhite}" />
                <Setter Property="TextColor"
                        Value="{StaticResource RiEOffBlack}" />
                <Setter Property="BorderColor"
                        Value="{StaticResource RiEGray}" />
                <Setter Property="BorderWidth"
                        Value="0" />
                <!--<Setter Property="HorizontalOptions"
                        Value="" />-->
            </Style>

            <Style x:Key="LoginButtonStyle" TargetType="Button"
                   BasedOn="{StaticResource ButtonStyle}">
                <Setter Property="Margin" 
                        Value="10,0" />
            </Style>

            <Style x:Key="AdminButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" 
                        Value="{StaticResource RiEOffWhite}" />
                <Setter Property="Padding"
                        Value="0" />
                <Setter Property="TextColor"
                        Value="Red" />
                <Setter Property="BorderColor"
                        Value="Red" />
                <Setter Property="BorderWidth"
                        Value="1" />
            </Style>

            <Style x:Key="StackLayoutStyle" TargetType="StackLayout">
                <Setter Property="Padding"
                        Value="20" />
                <Setter Property="BackgroundColor"
                        Value="{StaticResource RiELightGreen}" />
            </Style>

            <Style x:Key="QuestionFrameStyle" TargetType="Frame">
                <Setter Property="HasShadow"
                        Value="True" />
                <Setter Property="BorderColor"
                        Value="{StaticResource RiEGray}" />
                <Setter Property="CornerRadius"
                        Value="5" />
                <Setter Property="Margin"
                        Value="20" />
                <Setter Property="HorizontalOptions"
                        Value="Center" />
                <Setter Property="VerticalOptions"
                        Value="CenterAndExpand" />
            </Style>

            <Style x:Key="AnswerStepperStyle" TargetType="Stepper">
                <!--<Setter Property="HeightRequest"
                        Value="" />-->
                <!--<Setter Property="WidthRequest"
                        Value="40" />-->
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>